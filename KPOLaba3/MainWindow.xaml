<Window x:Class="KPOLaba3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KPOLaba3"
        Title="Часы" Height="350" Width="525">
    <Grid ShowGridLines="True">
        <TabControl x:Name="TabControl">
            <TabItem x:Name="TabItemNow" Header="Компьютер" Selector.Selected="OnTabSelected">
                <local:Clock x:Name="NowClock"/>
            </TabItem>
            <TabItem x:Name="TabItemMoscow" Header="Москва" Selector.Selected="OnTabSelected">
                <local:Clock x:Name="MoscowClock"/>
            </TabItem>
            <TabItem x:Name="TabItemLondon" Header="Лондон" Selector.Selected="OnTabSelected">
                <local:Clock x:Name="LondonClock"/>
            </TabItem>
            <TabItem x:Name="TabItemParis" Header="Париж" Selector.Selected="OnTabSelected">
                <local:Clock x:Name="ParisClock"/>
            </TabItem>
            <TabItem x:Name="TabItemNewYork" Header="Нью-Йорк" Selector.Selected="OnTabSelected">
                <local:Clock x:Name="NewYorkClock"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>